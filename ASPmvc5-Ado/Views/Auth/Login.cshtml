
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container"> 
        <div class="d-flex justify-content-center">
            <div class="row">
                <div class="border rounded p-4">
                    <div class="">
                        <h3 class="d-block text-center">Login</h3>
                    </div>
                    <form id="login">
                        <div class="mx-auto">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="inputEmail" placeholder="email@example.com">
                            </div>
                        </div>
                        <div class="">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-12">
                                <input type="password" class="form-control" id="inputPassword" placeholder="password">
                            </div>
                        </div>
                        <a id="btnLogin" href="#" type="submit" class="btn btn-success mt-3 w-100">Login</a>
                    </form>
                    <small>
                        <a href="#" type="button" class="mt-2">Forgot Password?</a>
                        <a href="/Auth/Register" type="button" class="mt-2 float-end">Register</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {
            $("#login").on("submit", function () {
                alert(2);
            })
        })
    </script>
</body>
</html>
